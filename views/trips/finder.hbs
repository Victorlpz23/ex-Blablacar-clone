            ></path></g></svg>
            <input type="number" value="{{query.seats}}" name="seats" class="form-control text-secondary border-0 {{#if errors.seats}}is-invalid{{/if}}"
              placeholder="Seats">
              {{#if errors.seats}}<div class="invalid-feedback">{{errors.seats}}</div>{{/if}}
        </div>
      </div>
    </div>
  </div>
      <div>
        <button
          type="submit"
          class="search btn rounded-4 rounded-top-0 w-100"
        >Search</button>
      </div>
  </div>
  </form>
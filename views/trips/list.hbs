      <div class="d-flex flex-row">
        <div>
          <h6 class="card-subtitle mb-2 text-muted fw-bold fs-5">{{trip.departureTime}}</h6> 
          <p class="card-subtitle mb-2 text-muted fs-6">6h50</p>  {{!--  ¡¡¡ We must include the parameter !!! --}}
          <h6 class="card-subtitle mb-2 text-muted fw-bold fs-5">06:00</h6> {{!--  ¡¡¡ We must include the parameter !!! --}}
        </div>
        {{!-- Trip bar picture --}}
        <div class="travel-icon ms-2 me-2">
          <div class="travel-icon-circle"></div>
          <div class="travel-icon-line"></div>
          <div class="travel-icon-circle"></div>
        </div>
        {{!-- From to information --}}

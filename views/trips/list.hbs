<h1>List of trips</h1>
<div class="d-flex align-items-center flex-column">
  {{#each trips as |trip|}}
    <a
      class="card mb-2 border-1 rounded-4 shadow nav-link {{isTripComplete trip.seats}}"
      style="width: 90%;"
      href="/trips/{{trip.id}}"
    >
      <div class="card-body">
        <li>{{trip.from}}</li>
        <li>{{trip.to}}</li>
        <li>Price: {{trip.price}}â‚¬</li>
        <li>Seats: {{trip.seats}}</li>
        <li>{{trip.user.user}}</li>
        <li>{{trip.date}}</li>
        <img class="rounded-circle mt-1" src="{{trip.user.image}}" alt="user" width="28px" height="28px">
      </div>
    </a>
  {{/each}}
</div>
<h1>Update trip</h1>

<form action="/trips/{{trip.id}}" method="POST">
    <div class="mb-3">
      <label for="from" class="form-label">From</label>
      <input type="text" value="{{trip.from}}" name="from" id="from" class="form-control" placeholder="From City">
    </div>
    <div class="mb-3">
      <label for="to" class="form-label">To</label>
      <input type="text" value="{{trip.to}}" name="to" id="to" class="form-control" placeholder="Destiny City">
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input type="number" value="{{trip.price}}" name="price" id="price" class="form-control" placeholder="Price">
    </div>
    <div class="mb-3">
      <label for="date" class="form-label">Date</label>
      <input type="date" value="{{trip.date}}" name="date" id="date" class="form-control" placeholder="Date">
    </div>
    <div class="mb-3">
      <label for="seats" class="form-label">Seats</label>
      <input type="number" value="{{trip.seats}}" name="seats" id="seats" class="form-control" placeholder="Seats">
    </div>
    <div class="mb-3">
      <label for="comments" class="form-label">Comments</label>
      <input type="text" value="{{trip.comments}}" name="comments" id="comments" class="form-control" placeholder="Comments">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

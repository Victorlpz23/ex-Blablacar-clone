<div class="row mx-auto justify-content-center pt-25" style="width: 100%;">
  <div class="col-12 col-md-4 row justify-content-center">
     <h1 class="fs-25 mt-25">Create a New User</h1>
    <div class="card border-0">
      <div class="card-body">
        <form action="/trips/new" method="POST">
          <div class="mb-3">
            <div class="input-group mb-2">
                  <span class="input-group-text"><i class="fa fa-user fa-fw" aria-hidden="true"></i></span>
                  <input type="user" name="user" class="form-control bg-body-secondary"
                    placeholder="User">
              </div>
              <div class="input-group mb-2">
                  <span class="input-group-text"><i class="fa fa-id-card-o fa-fw" aria-hidden="true"></i></span>
                  <input type="text" name="name" class="form-control bg-body-secondary"
                    placeholder="Name">
              </div>
              <div class="input-group mb-2">
                  <span class="input-group-text"><i class="fa fa-id-card fa-fw" aria-hidden="true"></i></span>
                  <input type="text" name="lastName" class="form-control bg-body-secondary"
                    placeholder="Last Name">
              </div>
              <div class="input-group mb-2">
                  <span class="input-group-text"><i class="fa fa-calendar fa-fw" aria-hidden="true"></i></span>
                  <input type="date" name="birthDate" class="form-control bg-body-secondary"
                    placeholder="BirthDate">
              </div>
              <div class="input-group mb-2">
                  <span class="input-group-text"><i class="fa fa-at" aria-hidden="true"></i></span>
                  <input type="email" name="email" class="form-control bg-body-secondary"
                    placeholder="Email">
              </div>
              <div class="input-group mb-2">
                  <span class="input-group-text"><i class="fa fa-commenting fa-fw" aria-hidden="true"></i></span>
                  <input type="text" name="comments" class="form-control bg-body-secondary"
                    placeholder="Comments">
              </div>
                <button type="submit" class="login btn btn-primary rounded-pill text-white mb-5 border-0 fw-normal row justify-content-center">Create</button>
        </form>
      </div>
    </div>
  </div>
</div>